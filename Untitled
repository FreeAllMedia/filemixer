// 1. Behavior Stubs
// 2. Write one test
// 3. Make test pass
// 4. Look for ways to optimize code, do it if it makes sense
// 5. Repeat from step 2
//
// -----

// cat.js
class Cat {
	constructor(colors = ["black"]) {
		this.colors = colors;
	}
}

// test.js
describe("Cat", () => {
	it("should have one or more colors", () => {
		const cat = new Cat(["gray", "white"]);
		(cat.colors.length > 0).should.be.true;
	});
	it("should default to black", () => {
		const cat = new Cat();
		cat.colors[0].should.eql("black");
	});
	it("should have four legs");
	it("should have a tail");
	it("should be able to meow");
	it("should be under 30lbs");
});
